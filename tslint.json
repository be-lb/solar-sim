{
    "extends": [
        "tslint-eslint-rules",
        "tslint-config-airbnb"
    ],
    "rules": {
        "no-constant-condition": true,
        "import-name": false,
        "max-line-length": [
            false
        ],
        "ter-indent": [
            false
        ],
        "brace-style": [
            true,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ],
        "align": [
            false
        ]
    }
}